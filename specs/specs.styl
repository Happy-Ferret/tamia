.spec
	margin-bottom: 20px

	&_narrow
		width: 300px


.dialog
	position: fixed
	left: 50%
	top: 50%
	padding: 2*spacer
	transform: translate(-50%, -50%)
	background: #fff
	box-shadow: 0 0 10px black(.2)
	transition: opacity .5s ease-in-out

	&.is-hidden
		opacity: 0


body
	padding: 20px
	font: 16px/1.4 Helvetica, arial, freesans, clean, sans-serif

h2
	font-size: 24px
	font-weight: normal
	margin-bottom: 20px
