field-bones() {
	display: inline-block;
	vertical-align: middle;
	font-size: 1em;
	line-height: 1;
	outline: 0;
	transition: opacity .25 ease-out;
}

button-skin() {
	height: 2em;
	padding: .45em 1.5em .35em;
	background: linear-gradient(to bottom, form_light_bg_color, form_dark_bg_color);
	border: 1px solid form_border_color;
	border-bottom-color: form_light_border_color;
	color: form_button_color;
	box-shadow: 0 .1em .1em black(.04);
	text-shadow: 0 1px 0 white(.4);
	transition: border-color .1s ease-in-out, box-shadow .1s ease-in-out;
}

button-pressed-skin() {
	padding-top: .55em;
	padding-bottom: .25em;
	background: linear-gradient(to bottom, form_border_color, #eee);
	border-color: #999;
	box-shadow: inset 0 .1em .2em black(.2);
	text-shadow: 0 1px 0 black(.1);
}
