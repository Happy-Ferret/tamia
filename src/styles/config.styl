// Configuration

/// Debug mode.
DEBUG ?= false;

// Default spacer.
spacer ?= 10px;

// Max page with.
max_width ?= null;

// Max content block (.content) with.
content_max_width ?= null;

// Sticky footer height (default: no sticky footer).
//
// Example:
//   <footer class="footer">
//     <div class="footer-i">
//       Footer content
//     </div>
//   </footer>
sticky_footer_height ?= null;

// Background color.
bg_color ?= #fff;

// Base text color.
base_color ?= #111;

// Form background color.
form_bg_color ?= #fff;

// Form focus outline color.
form_focus_color ?= hsl(204, 68%, 69%);

// Form border color.
form_border_color ?= #bbb;

// Form darked background color: checkboxes, selectors, etc.
form_dark_bg_color ?= #f4f4f4;

// Form border radius.
form_border_radius ?= .15em;
