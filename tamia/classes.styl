// Helper classes

// Element is hidden.
.is-hidden
	display: none

/// Element is in transit between hidden (.is-hidden) and visible.
.is-transit
	display: block

// Disabled form element.
.is-disabled
	cursor: default
	pointer-events: none
	opacity: .4
	text-shadow: none

// Image replacement.
.ir
	background-color: transparent
	border: 0
	overflow: hidden
	&:before
		content: ""
		display: block
		width: 0
		height: 150%

// Clearfix.
.group
	clearfix()
