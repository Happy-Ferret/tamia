// Helper classes

// Element is hidden.
.is-hidden
	display: none !important

// Element is invisible (but occupies place on page).
.is-invisible
	visibility: hidden

/// Element is in transit between hidden (.is-hidden) and visible.
.is-transit
	display: block !important
	&.l-center
		display: table !important

// Clearfix.
.group
	clearfix()

// Make all images inside responsive.
.responsive-images
	img
		max-width: 100%
		height: auto
