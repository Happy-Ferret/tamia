<!DOCTYPE html>
<html lang="en">
<head>
	<%
		menu = @option('menu')
	%>
	<meta charset="utf-8">
	<title><% unless @page is 'index': %><%= @title %> — <% end %>Tâmia</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<link rel="shortcut icon" href="/tamia/favicon.ico" type="image/x-icon">
	<link href="styles.css" rel="stylesheet">
</head>
<body>
	<header class="header">
		<div class="content">
			<div class="l-row">
				<div class="l-left">
					<div class="logo">
						<% if @page is 'index': %>
							Tâmia
						<% else: %>
							<a href="/tamia/" class="logo__link">Tâmia</a>
						<% end %>
					</div>
					<nav class="nav">
						<% for name of menu: %>
							<span class="nav__item">
								<a href="<%= name %>.html" class="nav__link <% if name is @page: %>nav__link_active<% end %>">
									<%= menu[name] %>
								</a>
							</span>
						<% end %>
					</nav>
				</div>
				<div class="l-right">
					<a href="https://github.com/tamiadev/tamia" class="github-link">View on GitHub</a>
				</div>
			</div>
		</div>
	</header>

	<div class="page-content content">
		<% if @page is 'index': %>
			<div class="splash">
				<h1 class="splash__title">Tâmia</h1>
				<div class="splash__subtitle">Tiny but extremely opinionated front-end framework by <a href="http://sapegin.me/" class="link">Artem Sapegin</a>.</div>
			</div>
			<div class="text">
				<%- @content %>
			</div>
		<% else: %>
			<div class="l-row js-content-container">
				<div class="l-three-quarters text js-content">
					<%- @content %>
				</div>
				<div class="l-quarter">
					<u-toc class="toc" data-page="<%= @page %>"></u-toc>
				</div>
			</div>
		<% end %>
	</div>

	<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
	<script src="bundle.js"></script>

